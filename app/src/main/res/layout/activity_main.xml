<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alfredobejarano.bezirkalarmapp.view.MainActivity">

    <ImageButton
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/ic_warning"
        android:id="@+id/user_status_button"
        android:layout_centerInParent="true"
        android:background="@drawable/warning_button_background"  />

    <TextView
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:text="@string/not_safe"
        android:id="@+id/status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_status_button" />

</RelativeLayout>
